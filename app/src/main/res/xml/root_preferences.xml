<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/visual">

        <SwitchPreference
            android:title="@string/night_mode"
            app:defaultValue="false"
            app:key="@string/is_night_mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/daily_news_label">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/is_top_news_active"
            app:title="@string/show_top_headlines" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/is_it_news_active"
            app:title="@string/show_it_news" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/is_bitcoin_news_active"
            app:title="@string/show_bitcoin_news" />

    </PreferenceCategory>

</PreferenceScreen>